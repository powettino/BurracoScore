<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="yeapp.com.burracoscore" >

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/carte_icona"
        android:hardwareAccelerated="true"
        android:label="@string/app_name" >
        <activity
            android:name=".activity.TeamSliderContainer"
            android:label="@string/configurazione"
            android:parentActivityName=".activity.SummaryContainer"
            android:theme="@style/Activity"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name=".activity.SummaryContainer"
            android:icon="@drawable/carte_icona"
            android:label="@string/app_name"
            android:theme="@style/Activity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.AddPointsContainer"
            android:label="@string/add_point_name"
            android:theme="@style/FeatureDialog"
            android:windowSoftInputMode="stateHidden" />
    </application>

</manifest>
