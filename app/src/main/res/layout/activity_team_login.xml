<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TeamLogin">

    <TextView
        android:id="@+id/typeGame"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/tipoPartita"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffa5a5a5"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <Button
            android:id="@+id/single"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:clickable="true"
            android:drawableLeft="@drawable/avatar"
            android:drawableRight="@drawable/avatar"
            android:enabled="true"
            android:text="@string/gameSingolo" />

        <Button
            android:id="@+id/couple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/single"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:clickable="true"
            android:drawableLeft="@drawable/d_avatar"
            android:drawableRight="@drawable/d_avatar"
            android:text="@string/gameDoppio" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/start"
            android:layout_below="@+id/couple">

            <GridLayout
                android:id="@+id/gridNames"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentTop="false"
                android:layout_alignWithParentIfMissing="false"
                android:layout_centerInParent="true"
                android:layout_marginTop="10sp"
                android:columnCount="2"
                android:orientation="horizontal"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:rowCount="4"
                android:rowOrderPreserved="false"
                android:saveEnabled="true">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical"
                    android:layout_row="0"
                    android:layout_rowSpan="2"
                    android:text="@string/labelSquadra1"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/giocatore11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="fill"
                    android:layout_marginLeft="10sp"
                    android:layout_row="0"
                    android:autoText="false"
                    android:ems="10"
                    android:inputType="textCapWords|textPersonName|textAutoComplete"
                    android:maxLength="10"
                    android:saveEnabled="true"
                    android:text="@string/nomeGiocatore11" />

                <EditText
                    android:id="@+id/giocatore12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="fill"
                    android:layout_marginLeft="10sp"
                    android:layout_row="1"
                    android:ems="10"
                    android:inputType="textCapWords|textPersonName|textAutoComplete"
                    android:maxLength="10"
                    android:saveEnabled="true"
                    android:text="@string/nomeGiocatore12" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical"
                    android:layout_row="2"
                    android:layout_rowSpan="2"
                    android:text="@string/labelSquadra2"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/giocatore21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="fill"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_row="2"
                    android:ems="10"
                    android:inputType="textCapWords|textPersonName|textAutoComplete"
                    android:maxLength="10"
                    android:saveEnabled="true"
                    android:text="@string/nomeGiocatore21" />

                <EditText
                    android:id="@+id/giocatore22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="fill"
                    android:layout_marginLeft="10sp"
                    android:layout_row="3"
                    android:ems="10"
                    android:inputType="textCapWords|textPersonName|textAutoComplete"
                    android:maxLength="10"
                    android:saveEnabled="true"
                    android:text="@string/nomegiocatore22" />
            </GridLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center|bottom"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:enabled="false"
            android:gravity="center"
            android:saveEnabled="true"
            android:text="@string/startButton" />

    </RelativeLayout>

</LinearLayout>
