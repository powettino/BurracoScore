<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200sp"
    android:layout_height="250sp"
    android:layout_centerInParent="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="yeapp.com.burracoscore.AddPoint">


    <RelativeLayout
        android:id="@+id/relativeBase"
        style="@style/ContenutoPerfetto"
        android:layout_width="fill_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            style="@style/ContenutoPerfetto.CentratoVerticale.SmallMono"
            android:text="@string/puntiBase" />

        <EditText
            android:id="@+id/puntiBaseText"
            style="@style/ContenutoPerfetto.Centrato.SmallMono"
            android:layout_alignParentEnd="true"
            android:ems="4"
            android:inputType="number"
            android:maxLength="4"
            android:text="0" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeCarte"
        style="@style/ContenutoPerfetto"
        android:layout_width="fill_parent"
        android:layout_below="@+id/relativeBase"
        android:layout_marginTop="@dimen/lowMargin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView1"
            style="@style/ContenutoPerfetto.CentratoVerticale.SmallMono"
            android:layout_marginRight="@dimen/mediumMargin"

            android:text="@string/puntiCarte" />

        <EditText
            android:id="@+id/puntiCarteText"
            style="@style/ContenutoPerfetto.Centrato.SmallMono"
            android:layout_alignParentEnd="true"
            android:ems="4"
            android:inputType="number"
            android:maxLength="3"
            android:text="0" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeChiusura"
        style="@style/ContenutoPerfetto"
        android:layout_width="fill_parent"
        android:layout_below="@+id/relativeCarte"
        android:layout_marginTop="@dimen/lowMargin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            style="@style/ContenutoPerfetto.CentratoVerticale.SmallMono"
            android:layout_marginRight="@dimen/mediumMargin"
            android:text="@string/puntiChiusura" />

        <CheckBox
            android:id="@+id/checkChiusura"
            style="@style/ContenutoPerfetto.Centrato.MediumMono"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/mediumMargin"
            android:background="@drawable/shape_check"
            android:cursorVisible="false" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeMazzetto"
        style="@style/ContenutoPerfetto"
        android:layout_width="fill_parent"
        android:layout_below="@+id/relativeChiusura"
        android:layout_marginTop="@dimen/lowMargin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            style="@style/ContenutoPerfetto.CentratoVerticale.SmallMono"
            android:layout_marginRight="@dimen/mediumMargin"
            android:text="@string/puntiMazzetto" />

        <CheckBox
            android:id="@+id/checkMazzetto"
            style="@style/ContenutoPerfetto.Centrato.MediumMono"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/mediumMargin"
            android:background="@drawable/shape_check"
            android:cursorVisible="false" />

    </RelativeLayout>

    <Button
        android:id="@+id/salvaPunti"
        style="@style/ContenutoPerfetto.CentratoOrizzontale.Centrato"
        android:layout_below="@+id/relativeMazzetto"
        android:layout_marginTop="@dimen/lowMargin"
        android:background="@drawable/shape_button"
        android:text="@string/save"
        android:textColor="@drawable/text" />


</RelativeLayout>
