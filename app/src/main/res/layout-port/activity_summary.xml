                    <!--android:id="@+id/cancellaTutto"-->
                    <!--android:layout_width="70dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:background="@android:color/transparent"-->
                    <!--android:src="@drawable/ic_action_discard" />-->
            <!--</LinearLayout>-->
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>


