<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/master"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/SfondoBase"
    android:orientation="vertical"
    tools:context="yeapp.com.burracoscore.activity.SummaryActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/SfondoToolbar"
        android:minHeight="?attr/actionBarSize"
        android:title="@string/app_name"
        android:titleTextAppearance="@style/ToolbarTitle"
        tools:ignore="UnusedAttribute" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/containerMain"
            android:layout_width="match_parent"
            android:background="@drawable/border_shadow"
            android:layout_height="wrap_content"
            android:layout_above="@+id/relativeFinaleSummary"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/resultTextSection"
                android:baselineAligned="false">

                <RelativeLayout
                    android:layout_width="@dimen/noSpace"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ViewStub
                        android:id="@+id/empty"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout="@layout/empty_list_result" />

                    <ListView
                        android:id="@+id/listPointTeamA"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/SfondoMedio"
                        android:paddingBottom="@dimen/enormousMargin"
                        android:clipToPadding="false"
                        android:scrollbars="vertical" />

                    <FrameLayout
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/lowMargin"
                        android:background="@drawable/border_shadow">

                        <TextView
                            android:id="@+id/teamASummary"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/background_name"
                            android:gravity="center"
                            android:maxEms="1"
                            android:saveEnabled="true"
                            android:singleLine="false"
                            android:text="@string/teamAName"
                            android:textColor="@color/Arancio"
                            android:textSize="@dimen/mediumText"
                            android:typeface="monospace" />
                    </FrameLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/insignificantMargin"
                    android:layout_height="match_parent"
                    android:background="@color/SfondoOmbre" />

                <RelativeLayout
                    android:layout_width="@dimen/noSpace"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ViewStub
                        android:id="@+id/empty2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout="@layout/empty_list_result" />

                    <ListView
                        android:id="@+id/listPointTeamB"
                        android:layout_width="match_parent"
                        android:paddingBottom="@dimen/enormousMargin"
                        android:clipToPadding="false"
                        android:layout_height="match_parent"
                        android:background="@color/SfondoMedio"
                        android:scrollbars="vertical" />

                    <FrameLayout
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/lowMargin"
                        android:layout_marginRight="@dimen/lowMargin"
                        android:background="@drawable/border_shadow">

                        <TextView
                            android:id="@+id/teamBSummary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background_name"
                            android:gravity="center"
                            android:maxEms="1"
                            android:singleLine="false"
                            android:text="@string/teamBName"
                            android:textColor="@color/Blu"
                            android:textSize="@dimen/mediumText"
                            android:typeface="monospace" />
                    </FrameLayout>
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/resultTextSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="1dp">

                <TextView
                    android:id="@+id/resultA"
                    android:layout_width="@dimen/noSpace"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/SfondoMedio"
                    android:enabled="true"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/Nero"
                    android:textSize="@dimen/largeText" />

                <RelativeLayout
                    android:layout_width="@dimen/insignificantMargin"
                    android:layout_height="match_parent"
                    android:background="@color/SfondoOmbre">

                </RelativeLayout>

                <TextView
                    android:id="@+id/resultB"
                    android:layout_width="@dimen/noSpace"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/SfondoMedio"
                    android:enabled="true"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/Nero"
                    android:textSize="@dimen/largeText" />
                />
            </LinearLayout>


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/resultTextSection"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="-25dp"
                android:background="@drawable/border_round_shadow">

                <Button
                    android:id="@+id/addHand"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/background_round"
                    android:gravity="center"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:text="@string/plus"
                    android:textColor="@drawable/button_round_text_layout"
                    android:textSize="@dimen/largeText" />
            </FrameLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/relativeFinaleSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/footer"
            android:layout_centerHorizontal="true"
            android:baselineAligned="false"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/punteggioASummary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="@dimen/lowMargin"
                        android:paddingRight="@dimen/lowMargin"
                        android:text="@string/zeroValue"
                        android:textColor="@color/Arancio"
                        android:textSize="@dimen/enormousText"
                        android:typeface="monospace" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/coppaSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/cup_description"
                    android:src="@drawable/coppa_style" />
            </LinearLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/punteggioBSummary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingLeft="@dimen/lowMargin"
                        android:paddingRight="@dimen/lowMargin"
                        android:text="@string/zeroValue"
                        android:textColor="@color/Blu"
                        android:textSize="@dimen/enormousText"
                        android:typeface="monospace" />
                </LinearLayout>
            </RelativeLayout>

            <!-- SAREBBE FIGO AVERE UNA PROGRESS BAR VERTICALE MA BISOGNA ESTENDERE QUELLA ORIGINALE-->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/Blu"

            android:orientation="horizontal">
