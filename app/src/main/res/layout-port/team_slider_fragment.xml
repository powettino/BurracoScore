<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/teamNomi"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/mediumMargin">

    <EditText
        android:id="@+id/teamAlias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:singleLine="true"
        android:maxEms="9"
        android:textSize="@dimen/largeText"
        android:textAlignment="center"
        android:gravity="center"
        tools:text="Team A"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/mediumMargin"
        android:layout_marginBottom="@dimen/mediumMargin"
        android:layout_gravity="center"
        android:src="@drawable/ic_action_picture"
        android:id="@+id/foto" />

        <EditText
            android:id="@+id/giocatore1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/lowMargin"
            style="@android:style/Widget.TextView"
            android:autoText="false"
            android:background="@drawable/border_edittext"
            android:enabled="true"
            android:inputType="textCapWords|textPersonName|textAutoComplete"
            android:maxLength="20"
            android:textColor="@color/Nero"
            android:saveEnabled="true"
            android:text="@string/nomeGiocatore11"/>

        <EditText
            android:id="@+id/giocatore2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Nero"
            style="@android:style/Widget.TextView"
            android:layout_marginTop="@dimen/lowMargin"
            android:layout_gravity="center"
            android:autoText="false"
            android:background="@drawable/border_edittext"
            android:enabled="true"
            android:inputType="textCapWords|textPersonName|textAutoComplete"
            android:maxLength="20"
            android:saveEnabled="true"
            android:text="@string/nomeGiocatore21" />

</LinearLayout>