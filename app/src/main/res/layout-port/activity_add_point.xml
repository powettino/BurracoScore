<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200sp"
    android:layout_height="250sp"
    android:layout_centerInParent="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="yeapp.com.burracoscore.activity.AddPoint">


    <RelativeLayout
        android:id="@+id/relativeBase"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/puntiBase"
            android:textSize="@dimen/testoPiccolo"
            android:typeface="monospace" />

        <EditText
            android:id="@+id/puntiBaseText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:ems="4"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="4"
            android:text="@string/zeroValue"
            android:textSize="@dimen/testoPiccolo"
            android:typeface="monospace" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeCarte"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeBase"
        android:layout_marginTop="@dimen/lowMargin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/mediumMargin"
            android:text="@string/puntiCarte"
            android:textSize="@dimen/testoPiccolo"
            android:typeface="monospace" />

        <EditText
            android:id="@+id/puntiCarteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:ems="4"
            android:gravity="center"
            android:inputType="number|numberSigned"
            android:maxLength="3"
            android:text="@string/zeroValue"
            android:textSize="@dimen/testoPiccolo"
            android:typeface="monospace" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeChiusura"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeCarte"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/lowMargin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/mediumMargin"
            android:text="@string/puntiChiusura"
            android:textSize="@dimen/testoPiccolo"
            android:typeface="monospace" />

        <CheckBox
            android:id="@+id/checkChiusura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/mediumMargin"
            android:background="@drawable/shape_check"
            android:gravity="center"
            android:textSize="@dimen/testoMedio"
            android:typeface="monospace" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeMazzetto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeChiusura"
        android:layout_marginTop="@dimen/lowMargin"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/mediumMargin"
            android:text="@string/puntiMazzetto"
            android:textSize="@dimen/testoPiccolo"
            android:typeface="monospace" />


        <CheckBox
            android:id="@+id/checkMazzetto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/mediumMargin"
            android:background="@drawable/shape_check"
            android:gravity="center"
            android:textSize="@dimen/testoMedio"
            android:typeface="monospace" />

    </RelativeLayout>

    <Button
        android:id="@+id/salvaPunti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeMazzetto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/lowMargin"
        android:background="@color/SfondoPunti"
        android:gravity="center"
        android:text="@string/save"
        android:textColor="@drawable/text_layout" />


</RelativeLayout>
