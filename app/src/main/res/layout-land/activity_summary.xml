<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ContenutoParente.Gravitato"
    android:columnCount="3"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:rowCount="1"
    tools:context="yeapp.com.burracoscore.SummaryActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent">

        <TextView
            style="@style/ContenutoPerfetto.CentratoOrizzontale.Centrato.MediumMono.SquadraA"
            android:text="@string/teamAName"
            android:saveEnabled="true"
            android:id="@+id/teamASummary"
            android:layout_marginLeft="@dimen/mediumMargin"
            android:layout_marginRight="@dimen/mediumMargin"
            android:layout_marginBottom="@dimen/insignificantMargin"
            />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/listPointTeamA"
                android:background="#ffc33d41"
                android:layout_above="@+id/resultA" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="false"
                android:layout_alignParentStart="false"
                android:layout_alignParentBottom="true"
                android:id="@+id/setTeamA"
                android:text="@string/setPoint"
                android:textAppearance="@android:style/TextAppearance.Holo.Small"
                android:layout_centerInParent="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:id="@+id/resultA"
                android:text=""
                android:background="@color/SquadraA"
                android:alpha="0.7"
                android:gravity="center"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Holo.Large"
                android:layout_above="@+id/setTeamA"
                android:layout_marginBottom="@dimen/insignificantMargin" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tvstSummary"
            android:text="@string/VS"
            android:saveEnabled="true" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent">

        <TextView
            style="@style/ContenutoPerfetto.CentratoOrizzontale.Centrato.MediumMono.SquadraB"
            android:saveEnabled="true"
            android:layout_marginRight="@dimen/mediumMargin"
            android:layout_marginBottom="@dimen/insignificantMargin"
            android:id="@+id/teamBSummary"
            android:layout_marginLeft="@dimen/mediumMargin"
            android:layout_toRightOf="@+id/tvstSummary"
            android:text="@string/teamBName"
          />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/listPointTeamB"
                android:background="#ff1f6c8b"
                android:layout_above="@+id/resultB" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="false"
                android:layout_alignParentStart="false"
                android:layout_alignParentBottom="true"
                android:id="@+id/setTeamB"
                android:text="@string/setPoint"
                android:textAppearance="@android:style/TextAppearance.Holo.Small"
                android:layout_centerInParent="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:id="@+id/resultB"
                android:text=""
                android:background="@color/SquadraB"
                android:alpha="0.7"
                android:gravity="center"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Holo.Large"
                android:layout_above="@+id/setTeamB"
                android:layout_marginBottom="@dimen/insignificantMargin" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeFinaleSummary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/punteggioASummary"
            android:layout_marginRight="@dimen/highMargin"
            android:layout_toLeftOf="@+id/coppaSummary"
            android:text="@string/startingScore"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/SquadraA"
            android:textSize="@dimen/testoEnorme"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/punteggioBSummary"
            android:textColor="@color/SquadraB"
            android:layout_marginLeft="@dimen/highMargin"
            android:layout_toRightOf="@+id/coppaSummary"
            android:text="@string/startingScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/testoEnorme"
            android:typeface="monospace" />

        <ImageView
            android:id="@+id/coppaSummary"
            style="@style/ContenutoPerfetto.CentratoOrizzontale.CentratoVerticale"
            android:contentDescription="@string/cup_description"
            android:src="@drawable/coppa_trasp" />
        <!-- SAREBBE FIGO AVERE UNA PROGRESS BAR VERTICALE MA BISOGNA ESTENDERE QUELLA ORIGINALE-->
    </RelativeLayout>

</LinearLayout>


