<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/SfondoBase"
    android:gravity="end"
    android:orientation="vertical"

    tools:context="yeapp.com.burracoscore.activity.SummaryActivity"
    tools:ignore="RtlSymmetry">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/SfondoToolbar"
        android:minHeight="?attr/actionBarSize"
        android:title="@string/app_name"
        android:titleTextAppearance="@style/ToolbarTitle"
        tools:ignore="UnusedAttribute" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <!--<LinearLayout-->
        <!--android:layout_width="@dimen/noSpace"-->
        <!--android:layout_height="fill_parent"-->
        <!--android:layout_weight="1"-->
        <!--android:gravity="bottom"-->
        <!--android:orientation="vertical"-->
        <!--tools:ignore="InefficientWeight">-->

        <RelativeLayout
            android:id="@+id/containerMain"
            android:layout_width="@dimen/noSpace"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/insignificantMargin"
            android:layout_weight="1"
            android:background="@drawable/border_shadow"
            android:gravity="bottom"
            android:orientation="vertical"
            tools:ignore="InefficientWeight">

            <LinearLayout
                android:id="@+id/linearScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:layout_above="@+id/resultTextSection"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="1">

                    <ViewStub
                        android:id="@+id/empty"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout="@layout/empty_list_result" />

                    <ListView
                        android:id="@+id/listPointTeamA"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/SfondoMedio"
                        android:paddingBottom="@dimen/enormousMargin"
                        android:clipToPadding="false"
                        android:scrollbars="vertical" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/insignificantMargin"
                    android:layout_height="fill_parent"
                    android:background="@color/SfondoOmbre">

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="1">

                    <ViewStub
                        android:id="@+id/empty2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout="@layout/empty_list_result" />
                    <ListView
                        android:id="@+id/listPointTeamB"
                        android:layout_width="match_parent"
                        android:paddingBottom="@dimen/enormousMargin"
                        android:clipToPadding="false"
                        android:layout_height="match_parent"
                        android:background="@color/SfondoMedio"
                        android:scrollbars="vertical" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/resultTextSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="1dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/resultA"
                    android:layout_width="@dimen/noSpace"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/SfondoMedio"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/Nero"
                    android:textSize="@dimen/largeText" />

                <RelativeLayout
                    android:layout_width="@dimen/insignificantMargin"
                    android:layout_height="match_parent"
                    android:background="@color/SfondoOmbre" />

                <TextView
                    android:id="@+id/resultB"
                    android:layout_width="@dimen/noSpace"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/SfondoMedio"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/Nero"
                    android:textSize="@dimen/largeText" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/resultTextSection"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="-25dp"
                android:background="@drawable/border_round_shadow">

                <Button
                    android:id="@+id/addHand"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/background_round"
                    android:gravity="center"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:text="@string/plus"
                    android:textColor="@drawable/button_round_text_layout"
                    android:textSize="@dimen/largeText" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/lowMargin"
                android:layout_marginRight="@dimen/lowMargin"
                android:background="@drawable/border_shadow">

                <TextView
                    android:id="@+id/teamBSummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_name"
                    android:gravity="center"
                    android:maxEms="1"
                    android:singleLine="false"
                    android:text="@string/teamBName"
                    android:textColor="@color/Blu"
                    android:textSize="@dimen/mediumText"
                    android:typeface="monospace" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/lowMargin"
                android:background="@drawable/border_shadow">

                <TextView
                    android:id="@+id/teamASummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_name"
                    android:gravity="center"
                    android:maxEms="1"
                    android:saveEnabled="true"
                    android:singleLine="false"
                    android:text="@string/teamAName"
                    android:textColor="@color/Arancio"
                    android:textSize="@dimen/mediumText"
                    android:typeface="monospace" />
            </FrameLayout>

        </RelativeLayout>
        <!--</LinearLayout>-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/highMargin"
            android:layout_marginRight="@dimen/highMargin"
            android:orientation="vertical"
            android:paddingBottom="@dimen/insignificantMargin">

            <TextView
                android:id="@+id/punteggioASummary"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/zeroValue"
                android:textColor="@color/Arancio"
                android:textSize="@dimen/enormousText"
                android:typeface="monospace" />

            <ImageView
                android:id="@+id/coppaSummary"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:contentDescription="@string/cup_description"
                android:gravity="center_vertical"
                android:src="@drawable/coppa_style" />

            <TextView
                android:id="@+id/punteggioBSummary"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/zeroValue"
                android:textColor="@color/Blu"
                android:textSize="@dimen/enormousText"
                android:typeface="monospace" />

        </LinearLayout>

        <!-- SAREBBE FIGO AVERE UNA PROGRESS BAR VERTICALE MA BISOGNA ESTENDERE QUELLA ORIGINALE-->
    </LinearLayout>

</LinearLayout>


