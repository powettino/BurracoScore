<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270sp"
    android:layout_height="270sp"
    android:layout_centerInParent="true"
    android:paddingTop="@dimen/insignificantMargin"
    android:paddingBottom="@dimen/insignificantMargin"
    android:paddingLeft="@dimen/lowMargin"
    android:paddingRight="@dimen/lowMargin">

    <LinearLayout
        android:baselineAligned="false"
        android:id="@+id/puntiA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/labelA"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/lowMargin"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/labelA"
                    android:textColor="@color/Arancio"
                    android:textSize="@dimen/mediumText"
                    android:typeface="monospace" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="@dimen/smallText"
                    android:typeface="monospace" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/Blu"
                    android:gravity="center_horizontal"
                    android:text="@string/labelB"
                    android:textSize="@dimen/mediumText"
                    android:typeface="monospace" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/relativeBase"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/puntiBaseTextA"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="4"
                    android:gravity="center_horizontal"
                    android:inputType="number"
                    style="@android:style/Widget.EditText"
                    android:maxLength="4"
                    android:text="@string/zeroValue"
                    android:textSize="@dimen/smallText"
                    android:typeface="monospace"
                    android:numeric="signed|integer"
                    android:textColor="@color/Nero" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    style="@android:style/Widget.TextView"
                    android:text="@string/puntiBase"
                    android:textSize="@dimen/smallText"
                    android:typeface="monospace"
                    android:textColor="@color/Nero" />

                <EditText
                    android:id="@+id/puntiBaseTextB"
                    android:layout_width="0dp"
                    style="@android:style/Widget.EditText"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="4"
                    android:gravity="center_horizontal"
                    android:inputType="number"
                    android:maxLength="4"
                    android:text="@string/zeroValue"
                    android:textSize="@dimen/smallText"
                    android:typeface="monospace"
                    android:numeric="signed|integer"
                    android:textColor="@color/Nero" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/relativeCarte"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/lowMargin"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/puntiCarteTextA"
                    android:layout_width="0dp"
                    style="@android:style/Widget.EditText"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="4"
                    android:gravity="center"
                    android:inputType="number|numberSigned"
                    android:maxLength="3"
                    android:text="@string/zeroValue"
                    android:textSize="@dimen/smallText"
                    android:typeface="monospace"
                    android:numeric="signed|integer"
                    android:textColor="@color/Nero" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/puntiCarte"
                    style="@android:style/Widget.TextView"
                    android:textSize="@dimen/smallText"
                    android:typeface="monospace"
                    android:textColor="@color/Nero" />
                <EditText
                    android:id="@+id/puntiCarteTextB"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="4"
                    style="@android:style/Widget.EditText"
                    android:gravity="center"
                    android:inputType="number|numberSigned"
                    android:maxLength="3"
                    android:text="@string/zeroValue"
                    android:textSize="@dimen/smallText"
                    android:typeface="monospace"
                    android:numeric="signed|integer"
                    android:textColor="@color/Nero"
                    android:textColorHighlight="@color/SfondoMedio"
                    android:textColorHint="@color/Blu" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/relativeChiusura"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/lowMargin"
                android:orientation="horizontal">



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <CheckBox
                        android:id="@+id/checkChiusuraA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/checkbox_style"
                        android:gravity="center"
                        android:textSize="@dimen/mediumText"
                        android:typeface="monospace" />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/puntiChiusura"
                    style="@android:style/Widget.TextView"
                    android:textSize="@dimen/smallText"
                    android:typeface="monospace"
                    android:textColor="@color/Nero" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center">

                    <CheckBox
                        android:id="@+id/checkChiusuraB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/checkbox_style"
                        android:textSize="@dimen/mediumText"
                        android:typeface="monospace" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/relativeMazzetto"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/lowMargin"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center">

                    <CheckBox
                        android:id="@+id/checkMazzettoA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/checkbox_style"
                        android:textSize="@dimen/mediumText"
                        android:typeface="monospace" />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/puntiMazzetto"
                    style="@android:style/Widget.TextView"
                    android:textSize="@dimen/smallText"
                    android:typeface="monospace"
                    android:textColor="@color/Nero" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center">

                    <CheckBox
                        android:id="@+id/checkMazzettoB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/checkbox_style"
                        android:textSize="@dimen/mediumText"
                        android:typeface="monospace" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/salvaPunti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/puntiA"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/lowMargin"
        android:background="@color/SfondoMedio"
        android:gravity="center"
        android:text="@string/save"
        style="@android:style/Widget.Button"/>

</RelativeLayout>
