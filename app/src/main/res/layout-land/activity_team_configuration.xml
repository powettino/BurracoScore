<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ContenutoPerfetto"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/ContenutoPerfetto"
            android:orientation="vertical">

            <Button
                android:id="@+id/singleConf"
                style="@style/ContenutoPerfetto.Gravitato"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/lowMargin"
                android:background="@drawable/shape_button"
                android:clickable="true"
                android:drawableLeft="@drawable/head"
                android:drawableRight="@drawable/head"
                android:enabled="true"
                android:text="@string/gameSingolo"
                android:textColor="@drawable/text_layout"/>

            <Button
                android:id="@+id/coupleConf"
                style="@style/ContenutoPerfetto.Gravitato"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/lowMargin"
                android:background="@drawable/shape_button"
                android:clickable="true"
                android:drawableLeft="@drawable/d_head"
                android:drawableRight="@drawable/d_head"
                android:text="@string/gameDoppio"
                android:textColor="@drawable/text_layout"/>
        </LinearLayout>

        <GridLayout
            android:id="@+id/gridNames"
            style="@style/ContenutoPerfetto"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/lowMargin"
            android:columnCount="2"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/lowMargin"
            android:paddingRight="@dimen/lowMargin"
            android:rowCount="4"
            android:rowOrderPreserved="false"
            android:saveEnabled="true">

            <TextView
                android:id="@+id/teamAConf"
                style="@style/ContenutoPerfetto.Gravitato"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_rowSpan="2"
                android:enabled="false"
                android:text="@string/teamAName"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/SquadraA" />

            <EditText
                android:id="@+id/giocatore11"
                style="@style/ContenutoPerfetto.GravitatoPieno.TestoGenerico"
                android:layout_column="1"
                android:layout_marginBottom="@dimen/insignificantMargin"
                android:layout_marginLeft="@dimen/lowMargin"
                android:layout_row="0"
                android:background="@drawable/shape_edittext"
                android:enabled="false"
                android:text="@string/nomeGiocatore11" />

            <EditText
                android:id="@+id/giocatore12"
                style="@style/ContenutoPerfetto.GravitatoPieno.TestoGenerico"
                android:layout_column="1"
                android:layout_marginLeft="@dimen/lowMargin"
                android:layout_row="1"
                android:background="@drawable/shape_edittext"
                android:enabled="false"
                android:text="@string/nomeGiocatore12" />

            <TextView
                android:id="@+id/teamBConf"
                style="@style/ContenutoPerfetto.Gravitato"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_rowSpan="2"
                android:enabled="false"
                android:text="@string/teamBName"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/SquadraB" />

            <EditText
                android:id="@+id/giocatore21"
                style="@style/ContenutoPerfetto.GravitatoPieno.TestoGenerico"
                android:layout_column="1"
                android:layout_marginBottom="@dimen/insignificantMargin"
                android:layout_marginLeft="@dimen/lowMargin"
                android:layout_marginTop="@dimen/lowMargin"
                android:layout_row="2"
                android:background="@drawable/shape_edittext"
                android:enabled="false"
                android:text="@string/nomeGiocatore21" />

            <EditText
                android:id="@+id/giocatore22"
                style="@style/ContenutoPerfetto.GravitatoPieno.TestoGenerico"
                android:layout_column="1"
                android:layout_marginLeft="@dimen/lowMargin"
                android:layout_row="3"
                android:background="@drawable/shape_edittext"
                android:enabled="false"
                android:text="@string/nomeGiocatore22" />
        </GridLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/lowMargin">

        <Button
            android:id="@+id/salvaConf"
            style="@style/ContenutoPerfetto.Gravitato"
            android:layout_width="@dimen/buttonWidthEq"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/insignificantMargin"
            android:background="@drawable/shape_button"
            android:enabled="false"
            android:paddingLeft="@dimen/insignificantMargin"
            android:paddingRight="@dimen/insignificantMargin"
            android:saveEnabled="true"
            android:text="@string/save"
            android:textColor="@drawable/text_layout" />

        <Button
            android:id="@+id/resetConf"
            style="@style/ContenutoPerfetto.Gravitato"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_button"
            android:enabled="false"
            android:paddingLeft="@dimen/insignificantMargin"
            android:paddingRight="@dimen/insignificantMargin"
            android:text="@string/reset"
            android:textColor="@drawable/text_layout" />

        <Button
            android:id="@+id/chiudiConf"
            style="@style/ContenutoPerfetto.Gravitato"
            android:layout_width="@dimen/buttonWidthEq"
            android:layout_alignParentBottom="false"
            android:layout_marginLeft="@dimen/insignificantMargin"
            android:background="@drawable/shape_button"
            android:enabled="true"
            android:paddingLeft="@dimen/insignificantMargin"
            android:paddingRight="@dimen/insignificantMargin"
            android:saveEnabled="true"
            android:text="@string/close"
            android:textColor="@drawable/text_layout" />
    </RelativeLayout>


</LinearLayout>